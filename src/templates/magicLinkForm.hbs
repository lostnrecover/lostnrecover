<form action="/login" method="post">
<p>
  <label for="email">{{ __ 'Enter your email to get a Magic Link and connect' }}</label>
  <input type="email" id="email" name="email" />
</p>
<button type="submit">{{ __ 'Send me a magic link' }}</button>
</form>
{{#if error }}
<p class="error">{{ error }}</p>
{{/if}}