	{{#if status}}
<span class="status {{#if type }}{{type}}-{{status}}{{/if}} {{status}}">
	{{#if @partial-block}}
		{{> @partial-block }}
	{{else}}
		{{ __loc @root.locale status }} 
	{{/if}}
</span>
	{{else}}
<span class="status active">
	{{#if @partial-block}}
		{{> @partial-block }}
	{{else}}
		{{ __loc @root.locale 'active' }}
	{{/if}}
</span>
	{{/if}}
